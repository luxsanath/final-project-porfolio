html {
  font-size: 62.5%;
  scroll-behavior: smooth;
  scroll-padding-top: 8rem;
  overflow-x: hidden;
}

body {
  background: url(../images/);
  background-attachment: fixed;
  background-position: center;
  overflow-x: hidden;
}
#bknForm {
  max-width: 400px;
  padding: 15px;
  background: #f2f2f2;
  border: 1px solid #aaa;
}
#bknForm label, #bknForm input, #bknForm select {
  display: block;
  box-sizing: border-box;
  width: 100%;
  padding: 5px;
  margin: 5px 0;
}
#bknForm input[type="submit"] {
  background: #5c76d4;
  color: #fff;
  border: 0;
  padding: 15px 0;
  margin-top: 15px;
  cursor: pointer;
}
div.ok, div.err { 
  padding: 5px; 
  font-weight: bold;
}
div.ok { 
  background: #9cffbb; 
  border: 1px solid #1ca526;
}
div.err { 
  background: #ffe0e0; 
  border: 1px solid #bb1919;
}
html, body
{
  background: url(../images/background.jpg);
  background-attachment: fixed;
  background-position: center;
  overflow-x: hidden;
}{ font-family: arial, sans-serif; }